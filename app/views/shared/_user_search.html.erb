<%= link_to professional_path(user.professional), class:"career-description-connection" do %>
<div class="card-search">
  <%= image_tag(user.photo, class:"search-img") %>
  <div class="card-search-infos">

    <div class="career-description-search">
      <div class="career-search-header">
            <h4>Professional</h4>

        <h2><%= user.first_name %> <%= user.last_name %></h2>
        <div class="job_detailss">
          <p><%= user.user_description %></p>
          <p><%= user.professional.specialty %></p>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>

<style>

  .career-description-search {
  padding: 15px;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  h2 {
    margin: 0;
    font-size: 30px;
    font-weight: bold;
  }
  p {
    width: 320px;
    word-wrap: break-word;
    margin: 0;
    font-size: 12px;
    color: rgba(0,0,0,0.8);
    text-align: justify;
  }
}
</style>
