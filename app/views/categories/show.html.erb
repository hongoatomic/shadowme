<div class="container-fluid main-header-title">
  <% if @category.title == "Technology"  %>
  <h1 class="category-title">
    <i class="fas fa-cogs"></i>
    <%= @category.title %>
  </h1>

  <h3 class="category-description"><%= @category.description %></h3>
  <% elsif @category.title == "Health" %>
  <h1 class="category-title">
    <i class="fas fa-medkit"></i>
    <%= @category.title %>
  </h1>

  <h3 class="category-description"><%= @category.description %></h3>
  <% elsif @category.title == "Agriculture" %>
  <h1 class="category-title">
    <i class="fas fa-tractor"></i>
    <%= @category.title %>
  </h1>

  <h3 class="category-description"><%= @category.description %></h3>
  <% elsif @category.title == "Education" %>
  <h1 class="category-title">
    <i class="fas fa-graduation-cap"></i>
    <%= @category.title %>
  </h1>

  <h3 class="category-description"><%= @category.description %></h3>
  <% elsif @category.title == "Arts" %>
  <h1 class="category-title">
    <i class="fas fa-palette"></i>
    <%= @category.title %>
  </h1>

  <h3 class="category-description"><%= @category.description %></h3>
  <% elsif @category.title == "Engineering" %>
  <h1 class="category-title">
    <i class="fas fa-tools"></i>
    <%= @category.title %>
  </h1>

  <h3 class="category-description"><%= @category.description %></h3>
  <% elsif @category.title == "Law" %>
  <h1 class="category-title">
    <i class="fas fa-gavel"></i>
    <%= @category.title %>
  </h1>

  <h3 class="category-description"><%= @category.description %></h3>
  <% elsif @category.title == "Science" %>
  <h1 class="category-title">
    <i class="fas fa-flask"></i>
    <%= @category.title %>
  </h1>


  <h3 class="category-description"><%= @category.description %></h3>
  <% end %>
</div>

<div class="container mt-5">
  <div class="row mb-5">
    <% @careers.each do |career| %>
    <div class="col-xs-12 col-md-12 col-lg-12 col-xl-6">
      <%= render "career_card",  career: career %>
    </div>
    <% end %>
  </div>
</div>


<div class="container-fluid main-foot-title">
  <h3 class="foot-title">THE PATH TO RESPONSIBILITY IS USUALLY UPHILL - ALONG A GRADE. TO WALK IT REQUIRES PERSONAL CHARACTER AND STRUGGLE</h3>


  <div class="d-flex main-foot-buttons mt-5">
    <a href="/">
    <button class="btn">Back to home</button>
    </a>



  <%= link_to new_donation_path do %>
    <button class="btn">Make a donation</button>
  <% end %>
  </div>
</div>
