<div class="container">
  <h2 class="category-title">Career Categories</h2>
  <div class="row">
    <% @categories.each do |category| %>
    <div class="col-12 col-xs-12 col-md-6 col-lg-3 col-xl-3">
      <div class=''>

        <%= link_to category_path(category), class: 'no-hover' do %>
      <div class="category-card m-1 mb-5" style="background-image: linear-gradient(rgba(40, 40, 40, 0.3), rgba(54, 58, 60)), url('<%= category.image %>');">
       <p><%= category.title %></p>
      </div>

     </div>
     <% end %>
   </div>
   <% end %>
 </div>

</div>
